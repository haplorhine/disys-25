<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.gui.HelloController">
    <stylesheets>
        <URL value="@application.css" />
    </stylesheets>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox spacing="5">
        <Label text="Enter your name:   " />
        <TextField fx:id="name" HBox.hgrow="ALWAYS" />
    </HBox>
   <VBox prefHeight="200.0" prefWidth="100.0">
      <children>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <Label text="Community Pool" />
               <TextField fx:id="systemPercentage" />
            </children>
         </HBox>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <Label text="Grid Portion" />
               <TextField fx:id="gridPortion" />
            </children>
         </HBox>
      </children>
   </VBox>
   <Button mnemonicParsing="false" onAction="#onGetCurrentUsage" text="getCurrentUsage" />

    <HBox spacing="5">
      <children>
         <ComboBox fx:id="startTime" prefWidth="150.0" promptText="StartTime" />
          <ComboBox fx:id="endTime" prefWidth="150.0" promptText="EndTime" />
      </children>
    </HBox>
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <Button mnemonicParsing="false" onAction="#onShowData" text="show data" />
      </children>
   </HBox>
   <VBox prefHeight="200.0" prefWidth="100.0">
      <children>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <Label text="CommunityUsed" />
               <TextField fx:id="resultCommunityUsed" />
            </children>
         </HBox>
         <TableView fx:id="detailTableData" prefHeight="200.0" prefWidth="200.0">
           <columns>
             <TableColumn fx:id="timeColumn" prefWidth="75.0" text="Zeit" />
             <TableColumn fx:id="CommunityUsedColumn" prefWidth="75.0" text="Community" />
           </columns>
         </TableView>
         <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onGetDetailData" text="Detaildaten" textAlignment="CENTER" />
      </children>
   </VBox>
    <Label fx:id="welcomeText" />
</VBox>
